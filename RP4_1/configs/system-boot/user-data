#cloud-config

# This is the user-data configuration file for cloud-init. By default this sets
# up an initial user called "ubuntu" with password "ubuntu", which must be
# changed at first login. However, many additional actions can be initiated on
# first boot from this file. The cloud-init documentation has more details:
#
# https://cloudinit.readthedocs.io/
# https://cloudinit.readthedocs.io/en/latest/topics/modules.html#users-and-groups
#
# Some additional examples are provided in comments below the default
# configuration.

preserve_hostname: false
hostname: RP4_1

## Add users and groups to the system, and import keys with the ssh-import-id
#groups:
#  - martin

users:
  - name: martin
    sudo: ALL=(ALL) ALL
    lock-passwd: false
    gecos: Martin Michotte
    primary_group: martin
    groups: adm, dialout, cdrom, floppy, sudo, audio, dip, video, plugdev, netdev, lxd
    shell: /bin/bash
    ssh_pwauth: true
    ssh_authorized_keys: 
      - ssh-rsa  martinmichotte@Martins-MBP.lan

# Enable password authentication with the SSH daemon
chpasswd:
  list:
    - martin:martin
  expire: true


## Update apt database and upgrade packages on first boot
#package_update: true
#package_upgrade: true

## Install additional packages on first boot
#packages:
#  - [python3-pip]

## Write arbitrary files to the file-system (including binaries!)
write_files:
  - path: /etc/default/keyboard
    content: |
      # KEYBOARD configuration file
      # Consult the keyboard(5) manual page.
      XKBMODEL="pc105"
      XKBLAYOUT="be"
      XKBVARIANT=""
      XKBOPTIONS=""
      BACKSPACE="guess"
    permissions: '0644'
    owner: martin:martin

timezone: "Europe/Brussels"

## Run arbitrary commands at rc.local like time
#runcmd:
#- [ ls, -l, / ]
#- [ sh, -xc, "echo $(date) ': hello world!'" ]
#- [ wget, "http://ubuntu.com", -O, /run/mydir/index.html ]
